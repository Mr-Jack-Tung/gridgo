<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>io.gridgo</groupId>
	<artifactId>gridgo</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<url>https://gridgo.io</url>

	<scm>
		<url>https://github.com/bachden/gridgo.git</url>
		<connection>scm:git:https://github.com/bachden/gridgo.git</connection>
		<developerConnection>Bach Hoang Nguyen</developerConnection>
		<tag>Java, server, microservice, message</tag>
	</scm>

	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>9</version>
	</parent>

	<modules>
		<module>gridgo-base</module>
		<module>gridgo-utils</module>
		<module>gridgo-bean</module>
		<module>gridgo-formatting</module>
		<module>gridgo-socket</module>
		<module>gridgo-socket-nanomsg</module>
		<module>gridgo-socket-zmq</module>
		<module>gridgo-configuration</module>
	</modules>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<gridgo.base.version>${project.version}</gridgo.base.version>
		<gridgo.utils.version>${project.version}</gridgo.utils.version>
		<gridgo.bean.version>${project.version}</gridgo.bean.version>
		<gridgo.formatting.version>${project.version}</gridgo.formatting.version>
		<gridgo.socket.version>${project.version}</gridgo.socket.version>
		<gridgo.socket.nanomsg.version>${project.version}</gridgo.socket.nanomsg.version>
		<gridgo.socket.zmq.version>${project.version}</gridgo.socket.zmq.version>
		<gridgo.configuration.version>${project.version}</gridgo.configuration.version>
	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-enforcer-plugin</artifactId>
										<versionRange>[1.0.0,)</versionRange>
										<goals>
											<goal>enforce</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>